{
    "compileOnSave": true,
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "lib",
        "target": "es2016",
        "module": "commonjs",
        "plugins": [
            {
                "name": "tslint-language-service"
            }
        ],
        "lib": ["es2017"],
        "declaration": true,
        "strict": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "lib", "bin", "test", "coverage"]
}
