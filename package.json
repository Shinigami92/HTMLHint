    "license": "MIT",
    "scripts": {
        "build": "tsc",
        "clean": "rimraf node_modules lib coverage package-lock.json && npm install",
        "cover": "istanbul cover ./node_modules/mocha/bin/_mocha -- --recursive",
        "semantic-release": "semantic-release",
        "lint": "tslint --project tsconfig.json --force --format stylish",
        "precommit": "npm-run-all precommit:prettier",
        "precommit:prettier": "pretty-quick --staged",
        "prettier": "prettier --write ./**/*.{js,json,md} --ignore-path ./.prettierignore",
        "test": "mocha --recursive"
    },
    "dependencies": {
        "async": "2.6.1",
        "colors": "1.3.2",
