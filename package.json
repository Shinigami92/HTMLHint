        "npm-run-all": "^4.1.3",
        "prettier": "1.14.2",
        "pretty-quick": "^1.6.0",
        "rimraf": "^2.6.2",
        "semantic-release": "^15.9.12",
        "source-map-support": "^0.5.9",
        "tslint": "^5.11.0",
        "tslint-eslint-rules": "^5.4.0"
